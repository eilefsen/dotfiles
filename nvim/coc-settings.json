// vim: ft=jsonc
{
    // Basic preferences.
    "coc.preferences.formatOnSave": true,
    // floatConfig
    "diagnostic.floatConfig": {
        "shadow": true
    },
    "hover.floatConfig": {
        "shadow": true
    },
    "suggest.floatConfig": {
        "shadow": true
    },
    "signature.floatConfig": {
        "shadow": true
    },
    // Signature
    "signature.enable": true,
    "signature.preferShownAbove": false,
    // Hover
    "hover.previewMaxHeight": 16,
    // Diagnostic
    "diagnostic.warningSign": " ",
    "diagnostic.errorSign": " ",
    "diagnostic.hintSign": "",
    "diagnostic.infoSign": " ",
    "diagnostic.checkCurrentLine": true,
    "diagnostic.enableMessage": "jump",
    // Language specific stuff
    // CSS Lint
    "css.lint.float": "warning",
    "css.lint.important": "warning",
    "css.lint.hexColorLength": "warning",
    "css.lint.duplicateProperties": "warning",
    "css.lint.universalSelector": "warning",
    "css.lint.emptyRules": "warning",
    "css.lint.propertyIgnoredDueToDisplay": "warning",
    "css.lint.fontFaceProperties": "warning",
    "css.lint.zeroUnits": "warning",
    // CSS Format
    "css.format.enable": true,
    "css.format.braceStyle": "collapse",
    "css.format.maxPreserveNewLines": 1,
    "css.format.spaceAroundSelectorSeparator": true,
    // SCSS Lint
    "scss.lint.float": "warning",
    "scss.lint.important": "warning",
    "scss.lint.hexColorLength": "error",
    "scss.lint.duplicateProperties": "warning",
    "scss.lint.universalSelector": "warning",
    "scss.lint.emptyRules": "warning",
    "scss.lint.propertyIgnoredDueToDisplay": "warning",
    "scss.lint.fontFaceProperties": "warning",
    "scss.lint.zeroUnits": "warning",
    "scss.lint.importStatement": "warning",
    // SCSS Format
    "scss.format.enable": true,
    "scss.format.braceStyle": "collapse",
    "scss.format.maxPreserveNewLines": 1,
    "scss.format.spaceAroundSelectorSeparator": true,
    // Regular LSP configs, not CoC Extensions.
    "languageserver": {
        // Microsoft's proprietary python LSP, based on pyright.
        // Sadly, it is superior to all alternatives.
        "pylance": {
            "enable": true,
            "filetypes": [
                "python"
            ],
            "env": {
                "ELECTRON_RUN_AS_NODE": "0",
                "VSCODE_NLS_CONFIG": "{\"locale\": \"en\"}"
            },
            // Load vscode extension from vscode directory
            "module": "${userHome}/.vscode/extensions/ms-python.vscode-pylance-2023.11.10/dist/server.bundle.js",
            "initializationOptions": {},
            "settings": {
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.diagnosticMode": "openFilesOnly",
                "python.analysis.stubPath": "./typings",
                "python.analysis.autoSearchPaths": true,
                "python.analysis.extraPaths": [],
                "python.analysis.diagnosticSeverityOverrides": {},
                "python.analysis.useLibraryCodeForTypes": true
            }
        }
    },
    "typescript.format.semicolons": "insert"
}
